{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationDir": "types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2019"
  },
  "exclude": ["**/*.(spec|test).ts", "node_modules"],
  "include": ["src/*"]
}
