{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": ["ES2020", "DOM"],
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "isolatedModules": true,
    "importHelpers": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true,
    "downlevelIteration": true
  },
  "include": ["src/*"],
  "exclude": ["**/*.(spec|test).ts", "node_modules"]
}
